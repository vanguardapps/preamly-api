{
  "name": "preamly-api",
  "type": "module",
  "version": "1.0.0",
  "description": "Serverless lambda functions to implement Preamly services",
  "main": "src/main.ts",
  "scripts": {
    "aws": "AWS_PROFILE=preamly aws",
    "serverless": "AWS_PROFILE=preamly serverless",
    "ci-test": "jest",
    "start-kafka": "bash src/dev-utils/start-kafka.sh",
    "stop-kafka": "bash src/dev-utils/stop-kafka.sh",
    "start": "pnpm generate-gql-types && tsx watch src",
    "generate-gql-types": "graphql-codegen --config codegen.yml",
    "build": "rollup --config",
    "watch": "rollup --config --watch"
  },
  "author": "Roy McClanahan",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.4.1",
    "@babel/core": "^7.21.0",
    "@graphql-tools/schema": "^9.0.17",
    "@rollup/plugin-typescript": "^11.0.0",
    "apollo-server-express": "^3.12.0",
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-kafka-subscriptions": "^0.4.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.11.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.2",
    "pluralize": "^8.0.0",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.1",
    "@graphql-codegen/client-preset": "^2.1.1",
    "@graphql-codegen/typescript": "^3.0.1",
    "@graphql-codegen/typescript-resolvers": "^3.1.0",
    "@graphql-typed-document-node/core": "^3.1.2",
    "@rollup/plugin-json": "^6.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/micro-cors": "^0.1.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.14.6",
    "@types/pluralize": "^0.0.29",
    "@types/ws": "^8.5.3",
    "eslint": "8.30.0",
    "jest": "^29.4.3",
    "rollup": "^3.19.1",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  }
}
